<div class="message">
  <div class="user-name">
    <div class="user-name">
      <%= message.user.nickname %>
    </div>
    <div class="day-time">
      <%= message.updated_at.strftime("%m/%d %H:%M") %>
    </div>
    </div class="message-content">
      <%= simple_format(h message.content) %>
    </div>
  </div>
</div>