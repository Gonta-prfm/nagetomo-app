<%= render "shared/header" %>

<div class="main wf-roundedmplus1c">
  <% if user_signed_in? %>
    <div class="btn-list">
      <div class="chat-btn">
        <%= link_to "検索", search_users_path, method: :get %>
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
      </div>
  <% else %>
      <div class="login-btn">
        <%= link_to "ログイン", new_user_session_path %>
        <%= link_to "新規登録", new_user_registration_path %>
      </div>
    </div>
  <% end %>

  <div class="title">
    <h1>NageTomo</h1>
  </div>
  
    <div class="favorite-title">
      <h1>☆投げ友一覧</h1>
    </div>
      <div class="list">
      <ul>
        <div class="friend-list">
          <% @users.each do |user| %>
            <li class="user-name">
                <% if user.image? %>
                  <%= image_tag user.image.url, class: "avater-size" %>
               <% else %>
                  <%= image_tag "/assets/user.png", class: "avater-size" %>
               <% end %>
              <%= link_to "#{user.nickname}", user_path(user), class: "user-nickname" %>
            </li>
          <% end %>
        </div>
      </ul>
      </div>
      <div class="rooms">
        <h1>ルーム</h1>
      </div>
        <div class="list">
          <ul>
          <div class="room-list">
          <% @rooms.each do |room| %>
            <li class="room-name">
              <%= link_to room.name,  room_messages_path(room), class: "room-btn" %>
            </li>
          <% end %>
          </div>
          </ul>
        </div>
</div>

