<h2>ユーザー登録画面</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :nickname, "ユーザー名" %>
    <span class="indispensable">必須</span><br />
    <%= f.text_field :nickname, autofocus: true, placeholder: "例) ダーツ太朗", autocomplete: "nickname" %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <span class="indispensable">必須</span><br />
    <%= f.email_field :email, autofocus: true, placeholder: "PC・携帯どちらでも可", autocomplete: "email" %>
  </div>

    <div class="field">
    <div class="form-group">
      <div class='form-text-wrap'>
         <%= f.label :password, "パスワード" %>
        <span class="indispensable">必須</span>
      </div>
     <%= f.password_field :password,  placeholder:"6文字以上の半角英数字"%>
    </div>
  <div class="field">
    <div class="form-group">
      <div class='form-text-wrap'>
         <%= f.label :password_confirmation, "パスワード[確認]" %>
        <span class="indispensable">必須</span>
      </div>
    <%= f.password_field :password_confirmation, placeholder: "同じパスワードを入力" %>
  </div>


  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
